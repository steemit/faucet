<!DOCTYPE html>
<html>
    <% include ./partials/layout/head %>
    <body>
        <div class="main-wrapper">
            <div class="app" id="app">
                <% include ./partials/layout/header %>
                <% include ./partials/layout/menu.ejs %>
                <article class="content">
                    <section class="section">
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="card card-card-default">
                                    <div class="card-header">
                                        <div class="header-block">
                                            <p class="title"> Ongoing users </p>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <h1><%= ongoing %></h1>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/users/ongoing">View users</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="card card-warning">
                                    <div class="card-header">
                                        <div class="header-block">
                                            <p class="title"> Pending users </p>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <h1><%= pending %></h1>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/users/pending">View users</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="card card-success">
                                    <div class="card-header">
                                        <div class="header-block">
                                            <p class="title"> Approved users </p>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <h1><%= approved %></h1>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/users/approved">View users</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="card card-danger">
                                    <div class="card-header">
                                        <div class="header-block">
                                            <p class="title"> Rejected users </p>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <h1><%= rejected %></h1>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/users/rejected">View users</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <div class="header-block">
                                            <p class="title"> Created users </p>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <h1><%= created %></h1>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/users/created">View users</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="card card-info">
                                    <div class="card-header">
                                        <div class="header-block">
                                            <p class="title"> All users </p>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <h1><%= all %></h1>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/users/all">View users</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </article>
            </div>
        </div>
        <% include ./partials/layout/scripts %>
    </body>
</html>